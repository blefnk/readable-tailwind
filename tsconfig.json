{
  "extends": "@schoero/ts-config",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "paths": {
      "eptm:rules:*": ["src/rules/*"],
      "eptm:tests:": ["src/tests/*"],
      "eptm:utils:*": ["src/utils/*"]
    },
    "rootDir": ".",
    "skipLibCheck": true
  }
}
