{
  "extends": "@schoero/configs/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "readable-tailwind:flavors:*": ["src/flavors/*"],
      "readable-tailwind:rules:*": ["src/rules/*"],
      "readable-tailwind:tests:*": ["src/tests/*"],
      "readable-tailwind:utils:*": ["src/utils/*"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "ES2020"
  }
}
